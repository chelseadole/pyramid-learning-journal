{% extends "layout.jinja2" %}
{% block content %}


    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          {% block postsection %}
          {% for post in ljposts %}
          <div class="post-preview">
            <a href="/journal/{{ post.id }}">
              <h2 class="post-title">
                {{ post.title }}
              </h2>
            </a>
            <p class="post-meta">Posted by
              <a href="">{{ post.author }}</a>
              on {{ post.creation_date }}</p>
          </div>
          <hr>
          {% endfor %}
          {% endblock %}
    
{% endblock %}
