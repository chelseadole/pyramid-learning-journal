
{% extends "layout.jinja2" %}
{% block content %}

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {% if error %}
            <p style="color: red; font-size: 20; text-align: center;">{{ error }}</p>
            {% endif %}
            <form method="POST">
                <p>Username:</p>
                <input type="text" name="username">
                <p>Password:</p>
                <input type="password" name="password">
                <br><br>
                <input type="submit" rows="8" name="Submit">
            </form>
          <hr>
{% endblock %}